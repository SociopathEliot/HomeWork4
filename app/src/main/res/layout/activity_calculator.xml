<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#28323B">

    <Button
        android:id="@+id/btn_open_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Show Result"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:gravity="end"
        android:padding="8dp"
        android:text="0" />

    <GridLayout
        android:id="@+id/grid_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:paddingTop="16dp">

        <!-- Row 1 -->
        <Button android:id="@+id/btn7" android:text="7" />
        <Button android:id="@+id/btn8" android:text="8" />
        <Button android:id="@+id/btn9" android:text="9" />
        <Button android:id="@+id/btn_div" android:text="/" />

        <!-- Row 2 -->
        <Button android:id="@+id/btn4" android:text="4" />
        <Button android:id="@+id/btn5" android:text="5" />
        <Button android:id="@+id/btn6" android:text="6" />
        <Button android:id="@+id/btn_mul" android:text="*" />

        <!-- Row 3 -->
        <Button android:id="@+id/btn1" android:text="1" />
        <Button android:id="@+id/btn2" android:text="2" />
        <Button android:id="@+id/btn3" android:text="3" />
        <Button android:id="@+id/btn_sub" android:text="-" />

        <!-- Row 4 -->
        <Button android:id="@+id/btn0" android:text="0" />
        <Button android:id="@+id/btn_dot" android:text="." />
        <Button android:id="@+id/btn_equals" android:text="=" />
        <Button android:id="@+id/btn_add" android:text="+" />

        <!-- Row 5 -->
        <Button android:id="@+id/btn_clear" android:text="C" />
    </GridLayout>
</LinearLayout>
