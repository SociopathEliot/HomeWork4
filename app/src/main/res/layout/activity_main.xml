<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#28323B"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- container for the top card and heart tab -->
    <FrameLayout
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Верхняя карточка -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

            <!-- Category button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_category"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#4486F1"
                android:text="Category"
                android:textColor="@android:color/white"
                android:layout_alignParentStart="true"
                android:insetLeft="12dp"
                android:insetRight="12dp"
                android:insetTop="6dp"
                android:insetBottom="6dp"/>


            <!-- Заголовок -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_category"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Explore the nightlife of your city"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <!-- Нижний ряд: Price, Participants, Accessibility -->
            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center_vertical">

                <!-- Price -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="free"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price💰"
                        android:textColor="#888888"
                        android:textSize="10sp"/>
                </LinearLayout>

                <!-- Participants -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Синие кружки -->
                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/circle_blue"/>

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/circle_blue"/>

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_blue"/>

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/circle_blue" />
                </LinearLayout>


                <!-- Accessibility gradient bar -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/gradient_accessibility"/>
            </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- pink tab background for the heart -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="top|end"
            android:translationX="16dp"
            android:translationY="-16dp"
            android:background="@drawable/tab_background"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="0dp"
            app:strokeWidth="0dp" />

        <!-- heart icon -->
        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:translationX="16dp"
            android:translationY="-16dp"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_favorite"
            android:tint="#FFFFFF"/>

    </FrameLayout>

    <!-- Next button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Next"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#4486F1"
        app:cornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/card_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Фильтры -->
    <LinearLayout
        android:id="@+id/ll_filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Category Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/categories"
            android:backgroundTint="#FFFFFF"/>

        <!-- Price RangeSlider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Price"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rangeSlider_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:valueFrom="0.0"
            app:valueTo="1.0"
            app:values="@array/price_defaults"
            app:stepSize="0.25"/>

        <!-- Accessibility Slider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Accessibility"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/slider_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:valueFrom="0.0"
            app:valueTo="1.0"
            app:value="0.5"
            app:stepSize="0.25"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
